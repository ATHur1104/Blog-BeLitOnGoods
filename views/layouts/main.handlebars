  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
  <header class="display-flex justify-space-between align-center p-2">
    <!-- Only display the logout button if the user is logged in -->
    <nav class="navbar">
      <ul>
      <li class="li-inline nav-item">
      <a href="/">Home</a>
      </li>
    {{#if loggedIn}}
<li class="li-inline nav-item">
      <a href="/dashboard">Dashboard</a>
    </li>
<li class="li-inline nav-item">
      <a href="/newblog">New Blog Post</a>
    </li>
      <button class="btn-no-style" id="logout">Logout</button>
    {{else}}
<li class="li-inline nav-item">
    <a href="/login">Login</a>

    </li>
    {{/if}}

      </ul>
    </nav>
    <h1>
      Blog Logs
    </h1>
  </header>
  <main class="container container-fluid mt-5">
    {{{ body }}}
  </main>
  <footer>

  </footer>

  <!-- Only include the logout script if the user is logged in -->
  {{#if loggedIn}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>